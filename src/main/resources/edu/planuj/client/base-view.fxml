<?xml version="1.0" encoding="UTF-8"?>

<?import edu.planuj.client.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<?import java.net.URL?>
<HBox fx:id="pane" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400" minWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.planuj.client.MainScreenController">
    <children>
        <VBox alignment="TOP_CENTER" minWidth="80" style="-fx-background-color: black;" HBox.hgrow="NEVER">
            <children>
                <Button fx:id="logInButton" contentDisplay="TOP" graphicTextGap="5.0" mnemonicParsing="false" onAction="#handleLogInButton" text="PROFILE" textAlignment="CENTER" textFill="#db5151" VBox.vgrow="NEVER">
                    <graphic>
                        <FontIcon iconColor="darkcyan" iconLiteral="bi-person-circle" iconSize="40" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="teamsButton" contentDisplay="TOP" graphicTextGap="5.0" mnemonicParsing="false" onAction="#handleTeamsButton" text="TEAMS" textAlignment="CENTER" textFill="#db5151" VBox.vgrow="NEVER">
                    <graphic>
                        <FontIcon iconColor="darkcyan" iconLiteral="bi-card-list" iconSize="40" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <StackPane fx:id="main" alignment="TOP_LEFT" minHeight="100.0" minWidth="400.0" HBox.hgrow="ALWAYS" >
            <HBox HBox.hgrow="ALWAYS">
                <children>
                    <ScrollPane fitToWidth="true" prefWidth="200" hbarPolicy="NEVER" minWidth="100" vbarPolicy="ALWAYS" HBox.hgrow="ALWAYS">
                        <content>
                            <TasksView fx:id="tasksView" />
                        </content>
                    </ScrollPane>
                    <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minWidth="100" HBox.hgrow="SOMETIMES">
                        <content>
                            <MembersView fx:id="membersView" />
                        </content>
                    </ScrollPane>
                </children>
            </HBox>
        </StackPane>
    </children>
        <stylesheets>
            <URL value="@base-view.css" />
        </stylesheets>
</HBox>
